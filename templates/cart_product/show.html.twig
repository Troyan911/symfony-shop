{% extends 'base.html.twig' %}

{% block title %}CartProduct{% endblock %}

{% block body %}
    <h1>CartProduct</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ cart_product.id }}</td>
        </tr>
        {% if cart_product.product %}
        <tr>
            <th>Name</th>
            <td>{{ cart_product.product | lower }}</td>
        </tr>
        {% endif %}
        <tr>
            <th>Quantity</th>
            <td>{{ cart_product.quantity }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ cart_product.createdAt ? cart_product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ cart_product.updatedAt ? cart_product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cart_product_index') }}">back to list</a>

    <a href="{{ path('app_cart_product_edit', {'id': cart_product.id}) }}">edit</a>

    {{ include('cart_product/_delete_form.html.twig') }}
{% endblock %}
